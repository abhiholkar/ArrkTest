<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/color_bg</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="arklabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:textColor">@color/color_label_text</item>
    </style>

    <style name="arkvalue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:textColor">@color/color_value_text</item>
    </style>

    <style name="error_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/common_margin</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="arkbutton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/common_margin</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:textColor">@color/color_item_text</item>
    </style>

    <style name="itemcontainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/common_margin</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
